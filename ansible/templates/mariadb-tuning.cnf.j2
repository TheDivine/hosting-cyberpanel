[mysqld]
# Automated tuning generated by Ansible
innodb_buffer_pool_size = {{ maria_buffer_pool_mb | int }}M
innodb_buffer_pool_instances = {{ maria_buffer_pool_instances | int }}
innodb_log_file_size = {{ maria_log_file_size_mb | int }}M
innodb_log_buffer_size = 64M
innodb_flush_method = O_DIRECT
innodb_flush_log_at_trx_commit = 2
innodb_read_io_threads = 8
innodb_write_io_threads = 8
innodb_file_per_table = 1
innodb_io_capacity = 2000
innodb_io_capacity_max = 4000
skip-name-resolve = 1
max_connections = 200
query_cache_type = 0
query_cache_size = 0
tmp_table_size = 256M
max_heap_table_size = 256M
table_open_cache = 4096
thread_cache_size = 200
log_error_verbosity = 3

# Replication/Binary logging disabled by default; enable if needed.
binlog_expire_logs_seconds = 604800
